#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
import("../../../../../distributedaudio.gni")

##############################fuzztest##########################################
ohos_fuzztest("DecoderOnErrorFuzzTest") {
  module_out_path = "${distributedaudio_fuzz_path}/decoderonerror"
  fuzz_config_file =
      "${audio_processor_path}/test/fuzztest/decoderonerror_fuzzer"

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "decoderonerror_fuzzer.cpp" ]

  include_dirs = [
    "${fwk_utils_path}/include/log",
    "${fwk_utils_path}/include",
    "${fwk_common_path}/log/include",
    "${fwk_common_path}/utils/include",
  ]

  include_dirs += [
    "include",
    "${common_path}/include",
    "${audio_processor_path}/decoder/include",
  ]

  deps = [
    "${audio_transport_path}/decodetransport:distributed_audio_decode_transport",
    "${services_path}/common:distributed_audio_utils",
  ]

  external_deps = [
    "c_utils:utils",
    "player_framework:media_client",
  ]

  defines = [
    "HI_LOG_ENABLE",
    "DH_LOG_TAG=\"DecoderOnErrorFuzzTest\"",
    "LOG_DOMAIN=0xD004100",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = [ ":DecoderOnErrorFuzzTest" ]
}
