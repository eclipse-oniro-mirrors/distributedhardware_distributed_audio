import("//build/test.gni")
import("//build/ohos.gni")
import("//build/ohos_var.gni")
import("//foundation/distributedhardware/distributed_audio/distributedaudio.gni")

module_output_path = "distributed_audio/services/audioprocessor/decode_processor_test"

config("module_private_config") {
    visibility = [ ":*" ]

    include_dirs = [
        "//foundation/multimedia/media_standard/interfaces/innerkits/native/media/include",
        "//foundation/multimedia/audio_standard/interfaces/inner_api/native/audiocommon/include",
        "${fwk_common_path}/utils/include",
    ]

    include_dirs += [
        "${common_path}/include",
        "${services_path}/common/audioparam",
        "${services_path}/common/audiodata/include",
        "${audio_processor_path}/decodeprocessor/include",
        "${audio_processor_path}/decoder/include",
        "${audio_processor_path}/interface",
        "${audio_processor_path}/test/unittest/common",
    ]
}

ohos_unittest("DecodeProcessTest") {
    module_out_path = module_output_path

    sources = [
        "decode_process_test.cpp",
        "${audio_processor_path}/test/unittest/common/audio_processor_callback_test.h",
    ]

    configs = [ ":module_private_config" ]

    deps = [
        "//third_party/googletest:gtest_main",
        "//utils/native/base:utils",
        "${common_path}:distributed_audio_utils",
        "${audio_processor_path}/decodeprocessor:distributed_audio_decoder_processor",
    ]

    external_deps = [
        "multimedia_media_standard:media_client",
        "hiviewdfx_hilog_native:libhilog",
    ]

    defines = [
        "HI_LOG_ENABLE",
        "DH_LOG_TAG=\"daudio_proc_test\"",
        "LOG_DOMAIN=0xD004100",
    ]
}

group("decode_processor_test") {
    testonly = true
    deps = [":DecodeProcessTest"]
}