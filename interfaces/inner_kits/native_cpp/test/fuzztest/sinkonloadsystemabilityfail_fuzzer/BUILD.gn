ohos_fuzztest("AudioSinkOnLoadSystemAbilityFailFuzzTest") {
  module_out_path = "distributed_audio/sinkonloadsystemabilityfail"
  fuzz_config_file =
      "${innerkits_path}/native_cpp/test/fuzztest/sinkonloadsystemabilityfail_fuzzer"

  cflags = ["-g","-O0","-Wno-unused-variable","-fno-omit-frame-pointer"]
  sources = [
    "sinkonloadsystemabilityfail_fuzzer.cpp",
  ]

  include_dirs = [
    "//utils/native/base/include",
    "//utils/system/safwk/native/include",
    "${fwk_utils_path}/include/log",
    "${fwk_utils_path}/include",
    "${fwk_common_path}/log/include",
    "${fwk_common_path}/utils/include",
  ]

