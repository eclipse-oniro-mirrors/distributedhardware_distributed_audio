import("//build/ohos.gni")
import("//build/ohos_var.gni")
import(
    "//foundation/distributedhardware/distributed_audio/distributedaudio.gni")

ohos_shared_library("distributed_audio_handler") {
  include_dirs = [
    "//foundation/multimedia/image_standard/interfaces/innerkits/include",
    "//third_party/json/include",
    "//commonlibrary/c_utils/base/include",
    "${fwk_common_path}/utils/include",
    "${mediastandard_path}/interfaces/inner_api/native",
    "${mediastandard_path}/services/utils/include",
    "${mediastandardfwk_path}/audiomanager/include",
    "${mediastandardfwk_path}/audiocommon/include",
    "${mediastandardfwk_path}/audiocapturer/include",
  ]

  include_dirs += [
    "include",
    "${common_path}/include",
    "${services_path}/common/audioparam",
  ]

  sources = [ "src/daudio_handler.cpp" ]

  deps = [
    "${common_path}:distributed_audio_utils",
    "${mediastandard_path}/interfaces/inner_api/native:media_client",
    "${mediastandard_path}/services/utils:media_service_utils",
    "${mediastandardfwk_path}/audiocapturer:audio_capturer",
    "//foundation/multimedia/image_standard/interfaces/innerkits:image_native",
  ]

  external_deps = [
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "multimedia_audio_framework:audio_client",
  ]

  defines = [
    "HI_LOG_ENABLE",
    "LOG_DOMAIN=0xD004100",
  ]

  cflags = [ "-Wno-shadow" ]
  cflags_cc = cflags

  subsystem_name = "distributedhardware"

  part_name = "distributed_audio"
}
